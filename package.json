{
  "name": "data-mocks",
  "version": "2.2.0",
  "main": "dist/mocks.js",
  "types": "dist/mocks.d.ts",
  "repository": "git@github.com:ovotech/data-mocks.git",
  "author": "Dave Cooper <dave.cooper@ovoenergy.com>",
  "license": "MIT",
  "homepage": "https://github.com/ovotech/data-mocks",
  "scripts": {
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run build",
    "build": "npm run clean && tsc && babel dist/mocks.js --out-file dist/mocks.js && uglifyjs dist/mocks.js -mco dist/mocks.js",
    "test": "jest",
    "publish:patch": "git checkout master && git pull && yarn version --patch && yarn publish --non-interactive && git push",
    "publish:minor": "git checkout master && git pull && yarn version --minor && yarn publish --non-interactive && git push",
    "publish:major": "git checkout master && git pull && yarn version --major && yarn publish --non-interactive && git push"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "testRegex": "\\.(test|spec)\\.ts?$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "jest-environment-jsdom-global"
  },
  "dependencies": {
    "fetch-mock": "^7.0.7",
    "lodash": "^4.17.11",
    "node-fetch": "^2.2.0",
    "query-string": "^6.1.0",
    "xhr-mock": "^2.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@types/fetch-mock": "^6.0.4",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.118",
    "@types/query-string": "^6.1.0",
    "axios": "^0.18.0",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "jest-environment-jsdom": "^23.3.0",
    "jest-environment-jsdom-global": "^1.1.0",
    "prettier": "1.14.3",
    "pretty-quick": "^1.7.0",
    "ts-jest": "^23.10.5",
    "typescript": "^2.8.3",
    "uglify-js": "^3.4.9"
  },
  "keywords": [
    "mocking",
    "mocks",
    "testing"
  ]
}
